# If arch is given on the command line, don't try to read arch from the list
arch=${1}
# Comma-delimited list of bug IDs and arches, new lines for new tuples
bugs="1234,arm64"

git pull

for bug in ${bugs} ; do
	if ! [[ -z ${arch} ]] ; then
		IFS="," bug_arch=( ${bug} )
		bug_arch=${bug_arch[1]}
	else
		bug_arch=${arch}
	fi

	nattka apply -a ${bug_arch} ${bug}
	nattka commit -a ${bug_arch} ${bug}
done

git push

# TODO: Drop bugs from list if nattka apply/commit fails
for bug in ${bugs} ; do
	if ! [[ -z ${arch} ]] ; then
		IFS="," bug_arch=( ${bug} )
		bug_arch=${bug_arch[1]}
	else
		bug_arch=$(arch}
	fi

	nattka resolve -a ${bug_arch} ${bug}
done
